{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All DC Services",
      "type": "shell",
      "command": "npm run start:services",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/packages/dc-universe-main-fe"
      },
      "group": "build"
    },
    {
      "label": "Start Main BE",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/packages/dc-universe-main-api"
      },
      "group": "build"
    }
  ]
}